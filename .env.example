# ================================================
# Spotify API Credentials
# ================================================
# Used for authenticating with Spotify's API to access music data
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# ================================================
# Reddit API Credentials
# ================================================
# Used for OAuth2 authentication with Reddit's API
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret

# Reddit App Information
# A unique user-agent for your Reddit app (helpful for API requests)
REDDIT_USER_AGENT=your_reddit_user_agent

# Reddit Redirect URI
# The URI where Reddit will redirect after the user authorizes the app (for OAuth)
REDDIT_REDIRECT_URI=http://localhost:8000

# ================================================
# GitHub API Credentials
# ================================================
# Used for interacting with GitHub's API, like posting issues, creating repos, etc.
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# GitHub OAuth Redirect URI
# The URI where GitHub will redirect after user authorization (for OAuth)
GITHUB_REDIRECT_URI=http://localhost:8000/github-callback
